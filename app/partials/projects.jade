div(ng-app='ng-app')
  div(ng-controller='ProjectsCtrl')
    h2 Projects
    span(class='project-details')
      span {{outdatedCount()}} outdated of {{projects.length}} projects
    table
      table(class='table')
        thead
          tr
            th Project
            th Status
        tbody
          tr(ng-repeat='project in projects')
            td
              a(ng-href='#/project/{{project.id}}') {{project.title}} 
            td
              span(class='{{project.status | statusIcon}}')
              {{project | statusDescription}}

    form(class='form-inline', ng-submit='addProject()')
      input(type='text', ng-model='projectTitle', size='50', placeholder='Title')
      input(type='text', ng-model='projectRepo', size='50', placeholder='Repository')
      input.btn.btn-primary(type='submit', value='add')
